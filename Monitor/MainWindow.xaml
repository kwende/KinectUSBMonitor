<Window x:Class="Monitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monitor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Label Content="Status:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Duration:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="StatusTextbox" HorizontalAlignment="Left" Margin="86,18,0,0" TextWrapping="Wrap" Text="" IsReadOnly="True" VerticalAlignment="Top" Width="266"/>
        <TextBox x:Name="DurationTextbox" HorizontalAlignment="Left" Margin="86,45,0,0" TextWrapping="Wrap" Text="" IsReadOnly="True" VerticalAlignment="Top" Width="266"/>
        <Image x:Name="Depth" HorizontalAlignment="Left" Height="273" Margin="22,131,0,0" VerticalAlignment="Top" Width="363"/>
        <Image x:Name="Color" HorizontalAlignment="Left" Height="273" Margin="390,131,0,0" VerticalAlignment="Top" Width="363"/>
        <Button x:Name="PlayButton" IsEnabled="False" Content="Play" HorizontalAlignment="Left" Margin="241,76,0,0" VerticalAlignment="Top" Width="111" Click="PlayButton_Click"/>
    </Grid>
</Window>
